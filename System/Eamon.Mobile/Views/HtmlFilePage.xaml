<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eamon.Mobile.Views.HtmlFilePage"
              Title="{Binding Title}"
             x:Name="BrowseHtmlFilePage">
	<ContentPage.Content>
		<StackLayout Margin="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
			<WebView x:Name="HtmlFileWebView" 
						HorizontalOptions="FillAndExpand" 
						VerticalOptions="FillAndExpand" 
						Source="{Binding OutputHtmlWebViewSource, Mode=TwoWay}"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>